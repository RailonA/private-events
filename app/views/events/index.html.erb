<h1 class="p-3 border-bottom bg-dark text-center text-white font-one">All Events</h1>

<div class="w-25 text-center pt-5 d-flex flex-row justify-content-center w-100 bg-light">

  <div class="d-flex flex-column me-5 border border-success rounded w-25 bg-light">

  <h2 class="border-bottom p-3 bg-success font-one text-light"> Upcoming Events </h2>
  
    <% @upcoming.each do |event| %>
    <div class="d-flex justify-content-start align-items-center ms-3">
      <h4 class="text-primary font-two">Event: &nbsp </h4>
      <div class="text-secondary font-two"><%= event.title %></div>
      
    </div>
    <div class="d-flex justify-content-start align-items-center ms-3">
      <h4 class="text-primary font-two">Descriptions: &nbsp </h4>
      <div class="text-secondary font-two"><%= event.description %></div>
    </div>
    <div class="d-flex justify-content-start align-items-center ms-3">
      <h4 class="text-primary font-two">Location: &nbsp</h4>
      <div class="text-secondary font-two"><%= event.location %></div>
    </div>
    <div class="d-flex justify-content-start align-items-center ms-3">
      <h4 class="text-primary font-two">Date: &nbsp</h4>
      <div class="text-secondary font-two"><%= event.date %></div>
    </div> 
    
    <div class="border-bottom border-success pt-2 pb-3 mb-2">
       <% if logged_in? %>
        <%= link_to 'Attend Event', invitations_path(:attended_event_id => event.id, :event_attende_id => current_user.id), :method => :post %><br>
        <%= link_to 'Events Details', event_path(event) %>
      <% end %>
    </div>
  <% end %>

</div>

<div class="d-flex flex-column border border-info rounded ms-5 w-25 bg-light">
  
<h2 class="border-bottom border-info p-3 bg-info font-one">Past Events</h2>

      <% @past.each do |event| %>
    <div class="">
      <h4 class="">Event: &nbsp </h4>
      <div class=""><%= event.title %></div>
      
    </div>
    <div class="">
      <h4 class="">Descriptions: &nbsp </h4>
      <div class=""><%= event.description %></div>
    </div>
    <div class="">
      <h4 class="">Location: &nbsp</h4>
      <div class=""><%= event.location %></div>
    </div>
    <div class="">
      <h4 class="">Date: &nbsp</h4>
      <div class=""><%= event.date %></div>
    </div> 
    
    <div class="border-bottom border-success pt-2 pb-3 mb-2">
       <% if logged_in? %>
        <%= link_to 'Events Details', event_path(event) %>
      <% end %>
    </div>
 
  <% end %>
</div>
</div>