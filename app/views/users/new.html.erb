
<div class="text-center  mx-auto mt-5">
  <h1 class="font-one">Create New User</h1>
  <div class="p-4 border border-primary bg-secondary w-25 mx-auto">
    <%= form_for(@user) do |f| %>
  <div class="m-3 font-two fw-bold text-light">
  <%= label_tag(:username, "Choose Your Username:") %>
  </div>
    
    <div class="m-3">
    <%= f.text_field(:username, placeholder: 'New Username') %>
    </div>
    
   
    <%= f.submit('Create User', :class => 'btn btn-primary m-3 border border-white fw-bold font-two') %>
  <% end %>
  </div>

</div>