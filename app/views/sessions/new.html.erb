  <div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
          <div class="danger has-text-danger">
            <%= flash[:danger] %>
          </div>

          <div class="actions">
            <div class="field">
              <%= form.label :email, class:'label' %>
              <div class="control mb-5">
                <%= form.email_field :email, class:'input border border-info' %>
              </div>

        
              <%= form.submit "Log In", class:'button is-info'%>
            </div>
          </div>
        <% end %>
        </div>
    </div>
  </div>
</div>